{% extends 'Layout/base.html.twig' %}

{% block title %}Créer un contenu{% endblock %}

{% block body %}
    <section class="max-w-4xl mx-auto px-6 py-20">
        <h1 class="text-3xl font-semibold mb-12">
            Créer un contenu
        </h1>

        <div class="bg-slate-900/40 backdrop-blur rounded-xl p-10">
            {{ form_start(form, {
                attr: { class: 'space-y-10' }
            }) }}

            <div>
                {{ form_row(form.title, {
                    label: 'Titre',
                    label_attr: {
                        class: 'block mb-2 text-sm text-slate-300'
                    },
                    attr: {
                        class: 'w-full bg-transparent border-b border-slate-600 py-2 text-slate-100 placeholder-slate-500 focus:outline-none focus:border-slate-300'
                    }
                }) }}
            </div>

            <div>
                {{ form_row(form.url, {
                    label: 'Url',
                    label_attr: {
                        class: 'block mb-2 text-sm text-slate-300'
                    },
                    attr: {
                        class: 'w-full bg-transparent border-b border-slate-600 py-2 text-slate-100 placeholder-slate-500 focus:outline-none focus:border-slate-300'
                    }
                }) }}
            </div>

            <div>
                {{ form_row(form.content, {
                    label: 'Contenu',
                    label_attr: {
                        class: 'block mb-2 text-sm text-slate-300'
                    },
                    attr: {
                        class: 'w-full bg-transparent border border-slate-700 rounded-lg p-4 h-56 text-slate-100 focus:outline-none focus:border-slate-400'
                    }
                }) }}
            </div>

            <div class="pt-6">
                <button
                    type="submit"
                    class="inline-flex items-center px-6 py-2 bg-indigo-500 text-white font-medium rounded-md hover:bg-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-slate-950"
                >
                    Créer
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </section>
{% endblock body %}
