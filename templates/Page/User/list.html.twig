{% extends 'Layout/base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <div class="max-w-6xl mx-auto py-8">
        <h1 class="text-2xl font-semibold mb-6">Utilisateurs</h1>

        <div id="user-root"
             data-users='{{ users|json_encode(constant("JSON_THROW_ON_ERROR"))|e("html_attr") }}'
             data-toggle-url="{{ path('app_user_toggle', { id: 0 }) }}">
        </div>
    </div>

    <script src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>

    <script type="text/babel">
        const { useState } = React;

        function UserList({ initialUsers, toggleUrlTemplate }) {
            const [users, setUsers] = useState(initialUsers);

            async function toggle(user) {
                console.log(toggleUrlTemplate);
                const url = toggleUrlTemplate.replace('/0', '/' + user.id);

                const response = await fetch(url, {
                    method: 'POST',
                    headers: { 'X-Requested-With': 'XMLHttpRequest' }
                });

                if (!response.ok) {
                    alert('Erreur lors du toggle');
                    return;
                }

                setUsers(users =>
                    users.map(u =>
                        u.id === user.id
                            ? { ...u, isEnabled: !u.isEnabled }
                            : u
                    )
                );
            }

            return (
                <div className="overflow-x-auto">
                    <table className="w-full text-sm border border-gray-800">
                        <thead className="bg-gray-900 text-gray-300">
                        <tr>
                            <th className="px-4 py-3 text-left">ID</th>
                            <th className="px-4 py-3 text-left">Username</th>
                            <th className="px-4 py-3 text-left">Email</th>
                            <th className="px-4 py-3 text-center">Statut</th>
                            <th className="px-4 py-3 text-center">Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {users.length === 0 && (
                            <tr>
                                <td colSpan="5" className="px-4 py-6 text-center text-gray-500">
                                    Aucun utilisateur
                                </td>
                            </tr>
                        )}

                        {users.map(user => (
                            <tr key={user.id} className="border-t border-gray-800 hover:bg-gray-900">
                                <td className="px-4 py-3">{user.id}</td>
                                <td className="px-4 py-3">{user.username}</td>
                                <td className="px-4 py-3">{user.email}</td>
                                <td className="px-4 py-3 text-center">
                                    {user.isEnabled
                                        ? <span className="text-green-400">Actif</span>
                                        : <span className="text-red-400">Désactivé</span>}
                                </td>
                                <td className="px-4 py-3 text-center">
                                    <button
                                        onClick={() => toggle(user)}
                                        className={`px-3 py-1 rounded text-xs text-white ${
                                            user.isEnabled
                                                ? 'bg-red-600 hover:bg-red-500'
                                                : 'bg-green-600 hover:bg-green-500'
                                        }`}
                                    >
                                        {user.isEnabled ? 'Désactiver' : 'Activer'}
                                    </button>
                                </td>
                            </tr>
                        ))}
                        </tbody>
                    </table>
                </div>
            );
        }

        const rootEl = document.getElementById('user-root');

        ReactDOM.createRoot(rootEl).render(
            <UserList
                initialUsers={JSON.parse(rootEl.dataset.users)}
                toggleUrlTemplate={rootEl.dataset.toggleUrl}
            />
        );
    </script>
{% endblock %}
